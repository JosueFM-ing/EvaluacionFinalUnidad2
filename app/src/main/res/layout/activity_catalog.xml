<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- SearchView para filtrar productos -->
    <SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Buscar productos" />

    <!-- RecyclerView para mostrar productos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_product_catalog"
        android:layout_width="match_parent"
        android:layout_height="533dp"
        android:layout_marginTop="8dp" />

    <!-- BotÃ³n para ver el carrito -->
    <Button
        android:id="@+id/btn_view_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#4CAF50"
        android:text="Ver Carrito"
        android:textColor="#FFFFFF" />

</LinearLayout>
